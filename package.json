{
  "name": "react-pending-resource",
  "author": "Lennart Hildebrandt",
  "description": "React hooks for loading and suspending async resources",
  "version": "1.0.0-beta.5",
  "repository": "https://github.com/lennerd/react-pending-resource",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/react-pending-resource.esm.js",
  "size-limit": [
    {
      "path": "dist/react-pending-resource.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-pending-resource.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@testing-library/react-hooks": "^4.0.0",
    "@types/react": "^17.0.0",
    "husky": "^4.3.7",
    "react": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^3.9.7"
  }
}
